# define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
int main()
{
	int a;
	int aa;
	scanf("%d", &a);
	for (int i =1;i<=a;i++)
	{
		for (int bb = 1;bb <= a - i;bb++)
		{
			printf(" ");
		}
		for (int aa = 1;aa <= i * 2 - 1;aa++)
		{
			printf("*");
		}
		printf("\n");
	}
	for (int i = a-1;i>=1;i--)
	{
		for (int dd = 1;dd <= a - i;dd++)
		{
			printf(" ");
		}
		for (int cc = 1;cc <= i * 2 - 1;cc++) {
			printf("*");
		}
		printf("\n");
	}
}
